{
  "typeAcquisition": {
      "include": [
          "jest"
      ]
  },
  "compilerOptions": {
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src"],
      "@api/*": ["src/api/*"],
      "@boot/*": ["src/boot/*"],
      "@config/*": ["src/config/*"],
      "@database/*": ["src/database/*"],
      "@middlewares/*": ["src/middlewares/*"],
      "@models/*": ["src/models/*"],
      "@services/*": ["src/services/*"],
      "@tests/*": ["src/tests/*"],
      "@utils/*": ["src/utils/*"]
    }
  }
}